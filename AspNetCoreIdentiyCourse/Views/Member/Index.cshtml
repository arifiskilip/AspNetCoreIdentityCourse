@model UserViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<h3 class="text-center">Kullanıcı Bilgileri</h3>
<div class="row">
    <div class="col-sm-3">
        <img style="width:100%; height:100%" src="@Model.Picture" alt=""/>
    </div>
    <div class="col-sm-9">
        <table class="table table-bordered table-striped">
            <tr>
                <th>Kullanıcı İsmi</th>
                <td>@Model.FirstName</td>
            </tr>
            <tr>
                <th>Kullanıcı İsmi</th>
                <td>@Model.LastName</td>
            </tr>
            <tr>
                <th>Cinsiyet</th>
                <td>@Model.Gender</td>
            </tr>
            <tr>
                <th>Şehir</th>
                <td>@Model.City</td>
            </tr>
            <tr>
                <th>Kullanıcı İsmi</th>
                <td>@Model.UserName</td>
            </tr>
             <tr>
                <th>E-Posta</th>
                <td>@Model.Email</td>
            </tr>
             <tr>
                <th>Telefon No</th>
                <td>@Model.PhoneNumber</td>
            </tr>
        </table>
    </div>
</div>

