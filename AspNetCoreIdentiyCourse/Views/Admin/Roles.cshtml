@model List<AppRole>
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Sisteme Kayıtlı Roller</h3>
<hr />
<table class="table table-bordered table-striped">
    <tr>
        <td>Id</td>
        <td>Rol</td>
        <td></td>
        <td></td>
    </tr>
    @if (Model.Count > 0)
    {
        @if (Model.Count < 1)
        {
            <tr>
                <td colspan="3">Hiç bir üye mevcut değil.</td>
            </tr>
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><form asp-action="DeleteRole" asp-controller="Admin" asp-route-id="@item.Id" method="post"><button class="btn btn-warning btn-block">Sil</button></form></td>
                <td><a asp-action="UpdateRole" asp-asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-info btn-block">Güncelle</a></td>
            </tr>
        }
    }
    else
    {
        <div class="alert alert-primary" role="alert">
            Sisteme Kayıtlı bir <b>Rol</b> bulunmamaktadır!
        </div>
    }
</table>
<a asp-action="AddRole" asp-controller="Admin" class="btn btn-success">Role Ekle</a>


