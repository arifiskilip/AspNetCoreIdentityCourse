@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "RoleAssign";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Kullanıcı Rol Atama(@ViewBag.userName)</h3>
<hr>
<form asp-controller="Admin" asp-action="RoleAssign" method="post">
    @for (int i = 0; i < Model.Count(); i++)
    {
        <div class="form-check">
            <input asp-for="@Model[i].Exist" type="checkbox" class="form-check-input" />
            <label asp-for="@Model[i].Id" class="form-check-label">@Model[i].Name</label>

            <input asp-for="@Model[i].Name" type="hidden"/>
            <input asp-for="@Model[i].Id" type="hidden"/>
        </div>
    }
    <br />
    <input class="btn btn-success btn-block" type="submit" value="Rol Ata" />
</form>
